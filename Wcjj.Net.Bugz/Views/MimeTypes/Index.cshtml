@model IEnumerable<Wcjj.Net.Bugz.Data.MimeType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MimeTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MimeTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MimeTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
